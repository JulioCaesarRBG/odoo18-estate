<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Real Estate Report Template -->
    <template id="report_real_estate_custom_document">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="padding: 10mm 15mm;">
                    
                    <!-- Header with Company Logo and Report Title -->
                    <t t-if="include_images">
                        <div class="row" style="border-bottom: 2px solid #875A7B; margin-bottom: 15px; padding-bottom: 8px;">
                            <div class="col-6">
                                <img t-if="o.env.company.logo" t-att-src="image_data_uri(o.env.company.logo)" style="max-height: 60px;" alt="Company Logo"/>
                                <div t-if="not o.env.company.logo">
                                    <h3 style="margin: 0;"><span t-field="o.env.company.name"/></h3>
                                </div>
                            </div>
                            <div class="col-6 text-right">
                                <h2 style="color: #875A7B; margin: 0; font-size: 22px;">
                                    <strong>Property Report</strong>
                                </h2>
                                <p style="margin: 3px 0 0 0; color: #666; font-size: 11px;">
                                    Ref: <span t-esc="o.id"/>
                                </p>
                            </div>
                        </div>
                    </t>

                    <!-- Property Name and Status -->
                    <div class="row" style="margin-bottom: 15px;">
                        <div class="col-12">
                            <div style="background: #875A7B; color: white; padding: 12px; border-radius: 3px;">
                                <h3 style="margin: 0; color: white; font-size: 18px;"><span t-field="o.name"/></h3>
                                <div class="row" style="margin-top: 8px; font-size: 13px;">
                                    <div class="col-6">
                                        <strong>Type:</strong> <span t-esc="o.property_type_id.name if o.property_type_id else 'N/A'"/>
                                    </div>
                                    <div class="col-6 text-right">
                                        <strong>Status:</strong>
                                        <t t-if="o.state == 'new'"> New</t>
                                        <t t-elif="o.state == 'received'"> Offer Received</t>
                                        <t t-elif="o.state == 'accepted'"> Offer Accepted</t>
                                        <t t-elif="o.state == 'sold'"> Sold</t>
                                        <t t-elif="o.state == 'canceled'"> Canceled</t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Property Details (conditional) -->
                    <t t-if="show_property_details">
                        <div class="row">
                            <div class="col-12">
                                <h5 style="background-color: #f8f9fa; padding: 6px; border-left: 3px solid #875A7B; margin-bottom: 10px; font-size: 14px;">
                                    <strong>Property Details</strong>
                                </h5>
                                <table class="table table-sm" style="font-size: 12px;">
                                    <tr>
                                        <td style="width: 50%; padding: 5px;"><strong>Post Code:</strong></td>
                                        <td><t t-esc="o.post_code if o.post_code else 'N/A'"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date Availability:</strong></td>
                                        <td><span t-field="o.date_availability"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Price Information (conditional) -->
                    <t t-if="show_price_info">
                        <div class="row">
                            <div class="col-12">
                                <h5 style="background-color: #f8f9fa; padding: 6px; border-left: 3px solid #875A7B; margin-bottom: 10px; font-size: 14px;">
                                    <strong>Price Information</strong>
                                </h5>
                                <table class="table table-sm" style="font-size: 12px;">
                                    <tr>
                                        <td style="width: 50%; padding: 5px;"><strong>Expected Price:</strong></td>
                                        <td><span t-field="o.expected_price" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Selling Price:</strong></td>
                                        <td><span t-field="o.selling_price" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Best Offer:</strong></td>
                                        <td><span t-field="o.best_offer" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Contact Information (conditional) -->
                    <t t-if="show_contact_info">
                        <div class="row">
                            <div class="col-12">
                                <h5 style="background-color: #f8f9fa; padding: 6px; border-left: 3px solid #875A7B; margin-bottom: 10px; font-size: 14px;">
                                    <strong>Contact Information</strong>
                                </h5>
                                <table class="table table-sm" style="font-size: 12px;">
                                    <tr>
                                        <td style="width: 45%; padding: 5px;"><strong>Salesperson:</strong></td>
                                        <td style="padding: 5px;"><t t-esc="o.salesperson_id.name if o.salesperson_id else 'N/A'"/></td>
                                    </tr>
                                    <tr t-if="o.buyer_id" style="background-color: #f8f9fa;">
                                        <td style="padding: 5px;"><strong>Buyer:</strong></td>
                                        <td style="padding: 5px;"><t t-esc="o.buyer_id.name"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Specifications (conditional) -->
                    <t t-if="show_specifications">
                        <div class="row">
                            <div class="col-12">
                                <h5 style="background-color: #f8f9fa; padding: 6px; border-left: 3px solid #875A7B; margin-bottom: 10px; font-size: 14px;">
                                    <strong>Specifications</strong>
                                </h5>
                                <table class="table table-sm" style="font-size: 12px;">
                                    <tr>
                                        <td style="width: 45%; padding: 5px;"><strong>Bedrooms:</strong></td>
                                        <td style="padding: 5px;"><t t-esc="o.bedrooms"/></td>
                                    </tr>
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding: 5px;"><strong>Living Area:</strong></td>
                                        <td style="padding: 5px;"><strong><t t-esc="o.living_area"/> sqm</strong></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 5px;"><strong>Facades:</strong></td>
                                        <td style="padding: 5px;"><t t-esc="o.facades if o.facades else 0"/></td>
                                    </tr>
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding: 5px;"><strong>Garage:</strong></td>
                                        <td style="padding: 5px;">
                                            <span t-if="o.garage">Yes</span>
                                            <span t-else="">No</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Garden Information (conditional) -->
                    <t t-if="o.garden and show_garden">
                        <div class="row" style="margin-top: 15px;">
                            <div class="col-12">
                                <h5 style="background-color: #28a745; color: white; padding: 6px; border-radius: 3px; font-size: 14px;">
                                    <strong>Garden Information</strong>
                                </h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-sm table-borderless" style="font-size: 12px;">
                                    <tr>
                                        <td style="width: 50%;"><strong>Garden Area:</strong></td>
                                        <td><t t-esc="o.garden_area"/> sqm</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Garden Orientation:</strong></td>
                                        <td>
                                            <t t-if="o.garden_orientation == 'north'">North</t>
                                            <t t-elif="o.garden_orientation == 'south'">South</t>
                                            <t t-elif="o.garden_orientation == 'east'">East</t>
                                            <t t-elif="o.garden_orientation == 'west'">West</t>
                                            <t t-else="">N/A</t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Total Area:</strong></td>
                                        <td><t t-esc="o.total_area"/> sqm</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Tags (conditional) -->
                    <t t-if="o.tag_ids and show_tags">
                        <div class="row" style="margin-top: 15px;">
                            <div class="col-12">
                                <h5 style="background-color: #17a2b8; color: white; padding: 6px; border-radius: 3px; font-size: 14px;">
                                    <strong>Property Tags</strong>
                                </h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <t t-foreach="o.tag_ids" t-as="tag">
                                    <span style="display: inline-block; background-color: #6c757d; color: white; padding: 3px 8px; border-radius: 12px; font-size: 11px; margin-right: 4px;">
                                        <t t-esc="tag.name"/>
                                    </span>
                                </t>
                            </div>
                        </div>
                    </t>

                    <!-- Description (conditional) -->
                    <t t-if="o.description and show_description">
                        <div class="row" style="margin-top: 15px;">
                            <div class="col-12">
                                <h5 style="background-color: #6c757d; color: white; padding: 6px; border-radius: 3px; font-size: 14px;">
                                    <strong>Property Description</strong>
                                </h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div style="background-color: #f8f9fa; padding: 10px; border-radius: 3px; border-left: 3px solid #6c757d;">
                                    <p style="text-align: justify; white-space: pre-line; margin: 0; font-size: 12px;">
                                        <t t-esc="o.description"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>

                    <!-- Offers List (conditional) -->
                    <t t-if="o.offer_ids and show_offers">
                        <div class="row" style="margin-top: 15px;">
                            <div class="col-12">
                                <h5 style="background-color: #ffc107; color: #000; padding: 6px; border-radius: 3px; font-size: 14px;">
                                    <strong>Received Offers</strong>
                                </h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-sm table-bordered" style="border: 1px solid #875A7B; font-size: 11px;">
                                    <thead style="background-color: #875A7B; color: white;">
                                        <tr>
                                            <th style="padding: 6px;">Price</th>
                                            <th style="padding: 6px;">Partner</th>
                                            <th style="padding: 6px;">Validity (Days)</th>
                                            <th style="padding: 6px;">Deadline</th>
                                            <th style="padding: 6px;">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.offer_ids" t-as="offer">
                                            <tr t-att-style="'background-color: %s;' % ('#e7f3e7' if offer.status == 'accepted' else '#ffe6e6' if offer.status == 'refused' else 'white')">
                                                <td style="padding: 6px; font-weight: bold;">
                                                    <span t-field="offer.price" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                                <td style="padding: 6px;"><t t-esc="offer.partner_id.name if offer.partner_id else 'N/A'"/></td>
                                                <td style="padding: 6px; text-align: center;"><t t-esc="offer.validity"/></td>
                                                <td style="padding: 6px;"><span t-field="offer.date_deadline"/></td>
                                                <td style="padding: 6px;">
                                                    <span t-if="offer.status == 'accepted'" style="background-color: #28a745; color: white; padding: 2px 6px; border-radius: 3px; font-size: 10px;">Accepted</span>
                                                    <span t-elif="offer.status == 'refused'" style="background-color: #dc3545; color: white; padding: 2px 6px; border-radius: 3px; font-size: 10px;">Refused</span>
                                                    <span t-else="" style="background-color: #6c757d; color: white; padding: 2px 6px; border-radius: 3px; font-size: 10px;">Pending</span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Footer -->
                    <div class="row" style="border-top: 1px solid #875A7B; padding-top: 10px; margin-top: 20px;">
                        <div class="col-6">
                            <p style="font-size: 10px; margin: 0;">
                                <strong>Company:</strong> <span t-esc="o.env.company.name"/><br/>
                                <strong>Phone:</strong> <span t-esc="o.env.company.phone or 'N/A'"/><br/>
                                <strong>Email:</strong> <span t-esc="o.env.company.email or 'N/A'"/>
                            </p>
                        </div>
                        <div class="col-6 text-right">
                            <p style="font-size: 9px; margin: 0; color: #666;">
                                Report generated on<br/>
                                <strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d %B %Y - %H:%M:%S')"/></strong>
                            </p>
                        </div>
                    </div>
                </div>
                <div style="page-break-after: always;"></div>
            </t>
        </t>
        </t>
    </template>

    <!-- Report Action Definition -->
    <record id="action_report_real_estate_custom" model="ir.actions.report">
        <field name="name">Custom Print</field>
        <field name="model">real.estate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_real_estate_custom_document</field>
        <field name="report_file">estate.report_real_estate_custom_document</field>
        <field name="print_report_name">'Custom Property Report - %s' % (object.name)</field>
        <field name="binding_model_id" ref="estate.model_real_estate"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

</odoo>
