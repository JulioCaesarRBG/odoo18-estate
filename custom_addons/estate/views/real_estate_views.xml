<odoo>
    <!-- Real Estate Tag Views -->
    <record id="real_estate_tag_tree_view" model="ir.ui.view">
        <field name="name">real.estate.tag.view.tree</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Real Estate Tag Form View -->
    <record id="real_estate_tag_form_view" model="ir.ui.view">
        <field name="name">real.estate.tag.view.form</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Real Estate Type Views -->
    <record id="real_estate_type_form_view" model="ir.ui.view">
        <field name="name">real.estate.type.view.form</field>
        <field name="model">real.estate.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Properties" 
                        type="object" 
                        name="action_open_property_ids" 
                        class="oe_stat_button" 
                        icon="fa-list">
                            <field name="property_count" widget="line_count" string="Properties"/>
                        </button>
                        <button string="Offers" 
                        type="object" 
                        name="action_open_offer_ids" 
                        class="oe_stat_button" 
                        icon="fa-usd">
                            <field name="offer_count" widget="line_count" string="Offers"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Real Estate Search Views -->
    <record id="real_estate_search_view" model="ir.ui.view">
        <field name="name">real.estate.view.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <!-- <field name="state" invisible="1"/> -->
                <field name="post_code"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="state"/>
                <separator/>
                <group string="Filters">
                <filter name="filter_state_name" string="New" domain="[('state', '=', 'new')]"/>
                <filter name="filter_available" string="Available" domain="[('state', 'in', ('new','received','accepted'))]"/>
                <filter name="filter_state_received" string="Offer Received" domain="[('state', '=', 'received')]"/>
                </group>
                <separator/>
                <group string="Group By">
                <filter name="group_by_post_code" string="Postcode" context="{'group_by':'post_code'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Real Estate Tree Views -->
    <record id="real_estate_tree_view" model="ir.ui.view">
        <field name="name">real.estate.view.tree</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <list
                decoration-success="state == 'received' or state == 'accepted'"
                decoration-bf="state == 'accepted'"
                decoration-muted="state == 'sold'"
            >
                <field name="name" width="200px"/>
                <field name="salesperson_id" width="150px"/>
                <field name="post_code" width="100px"/>
                <field name="bedrooms" width="100px"/>
                <field name="living_area" width="120px"/>
                <field name="expected_price" width="140px"/>
                <field name="selling_price" width="140px"/>
                <field name="date_availability" width="150px"/>
            </list>
        </field>
    </record>

    <!-- Real Estate Form Views -->
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">real.estate.view.form</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold" invisible="state in ('sold', 'canceled')" type="object" string="Sold"/>
                    <button name="action_cancel" invisible="state in ('sold', 'canceled')" type="object" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,received,accepted,sold,canceled"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <group>
                        <group>
                            <h1>
                               <field name="name"/>
                               <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </h1>
                        </group>
                        <newline/>
                        <group>
                            <field name="property_type_id"/>
                            <field name="post_code"/>
                            <field name="date_availability" widget="date"/>
                            <field name="salesperson_id"/>
                        </group>
                        <group>
                            <field name="best_offer"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="buyer_id"/>
                        </group>
                    </group> 
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                </group>
                                <newline/>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="facades"/>
                                    <field name="garden"/>
                                    <field name="total_area"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                    <field name="garage"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" widget="radio" invisible="not garden"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('sold', 'canceled')">
                                <list
                                    decoration-success="status == 'accepted'"
                                    decoration-danger="status == 'refused'"
                                >
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="type_id"/>
                                    <field name="date_deadline" column-invisible="parent.status =='sold'"/>
                                    <button icon="fa-check" invisible="status in ('accepted', 'refused')" name="accept_offer" type="object"/>
                                    <button icon="fa-times" invisible="status in ('accepted', 'refused')" name="refuse_offer" type="object"/>
                                    <field name="status" optional="False"/>

                                </list>
                            </field>
                        </page>
                        <page string="Others Info">

                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Real Estate Action -->
    <record id="test_record" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_available': True}</field>
    </record>

    <!-- Res Users Action -->
    <record id="res_users_action" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Real Estate Tag Action -->
    <record id="tag_record" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">real.estate.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Real Estate Type Action -->
    <record id="type_record" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">real.estate.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Real Estate Type Tree View -->
    <record id="type_tree_view" model="ir.ui.view">
        <field name="name">real.estate.type.view.tree</field>
        <field name="model">real.estate.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Real Estate Offer Tree View -->
    <record id="offer_tree_view" model="ir.ui.view">
        <field name="name">real.estate.offer.view.tree</field>
        <field name="model">real.estate.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="status"/>
                <field name="type_id"/>
            </list>
        </field>
    </record>

    <!-- Real Estate Offer Action -->
    <record id="offer_action_window" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">real.estate.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Res Users List View Inherit -->
    <record id="view_users_list_inherit_estate" model="ir.ui.view">
        <field name="name">res.users.list.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <field name="login" position="after">
                <field name="property_type_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id ="users_action_inherit_estate" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Specify list view for users_action_inherit_estate -->
    <record id="users_action_inherit_estate_view_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_users_list_inherit_estate"/>
        <field name="act_window_id" ref="users_action_inherit_estate"/>
    </record>

    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="estate_properties" string="Real Estate Properties">
                    <field name="property_type_ids"/>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Specify form view for users_action_inherit_estate -->
    <record id="users_action_inherit_estate_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_users_form"/>
        <field name="act_window_id" ref="users_action_inherit_estate"/>
    </record>

    <record id="view_users_form_inherit_estate" model="ir.ui.view">
        <field name="name">res.users.form.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="property_type_ids" widget="many2many_tags"/>
            </field>

        </field>
    </record>

</odoo>